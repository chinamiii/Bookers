
 <body>
   
    <p id="notice"></p>
    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th clspan="3"></th>
        </tr>
      </thead>


    <tbody>

    ã€€<% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",destroy_book_path(book.id), method: :delete %></td>
      </tr>


      <% end %>
     </tbody>
    </table>
    
  <div class="new-book">
    <div class="new">
      <h2>New book</h2>
    </div>
    
   <div class="error"> 
      <% if @book.errors.any? %>
         <div class="count">
          <%= @book.errors.count %>errors prohibited this book from being saved:
         </div>
        <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li>
              <%= message %>
            </li>
          </ul>
        <% end %>
      <% end %>
   </div>




  <%= form_with model:@book,local:true do |f| %>


  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>

  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>

  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
  </div>





  </body>

</html>