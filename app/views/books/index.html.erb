<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />

    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="books.scss" />
  </head>

  <body>

    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th clspan="3"></th>
        </tr>
      </thead>


    <tbody>

    　<% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "削除",destroy_book_path(book.id), method: :delete %></td>
      </tr>


      <% end %>
    </tbody>
    </table>

  <h2>New book</h2>

  <%= form_with model:@book,local:true do |f| %>


  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>

  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>

  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>





  </body>

</html>